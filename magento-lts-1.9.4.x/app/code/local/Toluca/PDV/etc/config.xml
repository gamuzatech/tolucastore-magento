<config>
    <modules>
        <Toluca_PDV>
            <version>0.0.6</version>
        </Toluca_PDV>
    </modules>
    <global>
        <helpers>
            <pdv>
                <class>Toluca_PDV_Helper</class>
            </pdv>
        </helpers>
        <blocks>
            <pdv>
                <class>Toluca_PDV_Block</class>
            </pdv>
        </blocks>
        <models>
            <pdv>
                <class>Toluca_PDV_Model</class>
                <resourceModel>pdv_mysql4</resourceModel>
            </pdv>
            <pdv_mysql4>
                <class>Toluca_PDV_Model_Mysql4</class>
                <entities>
                    <cashier>
                        <table>toluca_pdv_cashier</table>
                    </cashier>
                    <operator>
                        <table>toluca_pdv_operator</table>
                    </operator>
                    <history>
                        <table>toluca_pdv_history</table>
                    </history>
                    <log>
                        <table>toluca_pdv_log</table>
                    </log>
                </entities>
            </pdv_mysql4>
        </models>
        <resources>
            <pdv_setup>
                <setup>
                    <module>Toluca_PDV</module>
                    <class>Mage_Catalog_Model_Resource_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </pdv_setup>
            <pdv_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </pdv_write>
            <pdv_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </pdv_read>
        </resources>
        <fieldsets>
            <sales_convert_quote>
                <is_super_mode>
                    <to_order>*</to_order>
                </is_super_mode>
                <is_pdv>
                    <to_order>*</to_order>
                </is_pdv>
                <pdv_cashier_id>
                    <to_order>*</to_order>
                </pdv_cashier_id>
                <pdv_operator_id>
                    <to_order>*</to_order>
                </pdv_operator_id>
                <pdv_customer_id>
                    <to_order>*</to_order>
                </pdv_customer_id>
                <pdv_history_id>
                    <to_order>*</to_order>
                </pdv_history_id>
                <pdv_sequence_id>
                    <to_order>*</to_order>
                </pdv_sequence_id>
            </sales_convert_quote>
            <sales_convert_order>
                <is_super_mode>
                    <to_quote>*</to_quote>
                </is_super_mode>
                <is_pdv>
                    <to_quote>*</to_quote>
                </is_pdv>
                <pdv_cashier_id>
                    <to_quote>*</to_quote>
                </pdv_cashier_id>
                <pdv_operator_id>
                    <to_quote>*</to_quote>
                </pdv_operator_id>
                <pdv_customer_id>
                    <to_quote>*</to_quote>
                </pdv_customer_id>
                <pdv_history_id>
                    <to_quote>*</to_quote>
                </pdv_history_id>
                <pdv_sequence_id>
                    <to_quote>*</to_quote>
                </pdv_sequence_id>
            </sales_convert_order>
        </fieldsets>
        <events>
            <controller_action_predispatch>
                <observers>
                    <toluca_pdv_controller_action_predispatch>
                        <class>pdv/observer</class>
                        <method>controllerActionPredispatch</method>
                    </toluca_pdv_controller_action_predispatch>
                </observers>
            </controller_action_predispatch>
            <sales_order_place_after>
                <observers>
                    <toluca_pdv_sales_order_place_after>
                        <class>pdv/observer</class>
                        <method>salesOrderPlaceAfter</method>
                    </toluca_pdv_sales_order_place_after>
                </observers>
            </sales_order_place_after>
            <sales_order_invoice_pay>
                <observers>
                    <pdv_sales_order_invoice_pay>
                        <class>Toluca_PDV_Model_Observer</class>
                        <method>salesOrderInvoicePay</method>
                    </pdv_sales_order_invoice_pay>
                </observers>
            </sales_order_invoice_pay>
            <basic_install_installer_finish_after>
                <observers>
                    <pdv_install_installer_finish_after>
                        <class>Toluca_PDV_Model_Observer</class>
                        <method>installInstallerFinishAfter</method>
                    </pdv_install_installer_finish_after>
                </observers>
            </basic_install_installer_finish_after>
        </events>
    </global>
    <admin>
        <routers>
            <admin_pdv>
                <use>admin</use>
                <args>
                    <module>Toluca_PDV</module>
                    <frontName>admin_pdv</frontName>
                </args>
            </admin_pdv>
        </routers>
    </admin>
    <adminhtml>
        <layout>
            <updates>
                <pdv>
                    <file>toluca/pdv.xml</file>
                </pdv>
            </updates>
        </layout>
        <translate>
            <modules>
                <Toluca_PDV>
                    <files>
                        <default>Toluca_PDV.csv</default>
                    </files>
                </Toluca_PDV>
            </modules>
        </translate>
    </adminhtml>
    <frontend>
        <translate>
            <modules>
                <Toluca_PDV>
                    <files>
                        <default>Toluca_PDV.csv</default>
                    </files>
                </Toluca_PDV>
            </modules>
        </translate>
    </frontend>
    <default>
        <pdv>
            <cashier>
                <include_all_orders>1</include_all_orders>
                <show_pending_orders>1</show_pending_orders>
            </cashier>
            <payment_method>
                <money>cashondelivery</money>
                <machine>machineondelivery</machine>
                <pagcripto>gamuza_pagcripto_payment</pagcripto>
                <picpay>gamuza_picpay_payment</picpay>
                <openpix>gamuza_openpix_payment</openpix>
                <creditcard>rm_pagseguro_cc</creditcard>
                <billet>pagseguropro_boleto</billet>
                <banktransfer>banktransfer</banktransfer>
                <check>checkmo</check>
                <pix>gamuza_brazil_pix</pix>
            </payment_method>
        </pdv>
    </default>
</config>

